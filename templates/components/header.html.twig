<header class="header">
    <figure class="header__figure-logo">
    <a href="{{ path('homepage') }}">
        <img src="{{ asset('asset/media/logo/logo-full-light.svg') }}" alt="" class="header__figure-logo-img">
    </a>
    </figure>

    <nav class="header__nav-menu">
        <ul class="header__nav-list">
            <li class="header__nav-item">
                <a href="{{ path('homepage') }}" class="header__nav-link"> Home </a>
            </li>
            <li class="header__nav-item">
