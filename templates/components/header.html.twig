    <figure class="header__icon-menu">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin') }}" class="header__icon-link">
                    <img src="{{ asset('asset/media/icons/user-icon.svg') }}" alt="" class="header__icon-img">
                </a>
            {% else %}
                <a href="" class="header__icon-link">
                    <img src="{{ asset('asset/media/icons/user-icon.svg') }}" alt="" class="header__icon-img">
                </a>
            {% endif %}
        {% else %}
            <a href="{{ path('login') }}" class="header__icon-link">
                <img src="{{ asset('asset/media/icons/user-icon.svg') }}" alt="" class="header__icon-img">
            </a>
        {% endif %}
        <a href="" class="header__icon-link">
            <img src="{{ asset('asset/media/icons/cart-icon.svg') }}" alt="" class="header__icon-img">
        </a>
        <a href="" class="header__icon-link">
            <img src="{{ asset('asset/media/icons/burger-menu.svg') }}" alt="" class="header__icon-img">
